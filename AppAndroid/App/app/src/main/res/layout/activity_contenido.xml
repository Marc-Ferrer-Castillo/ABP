<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:id="@+id/pantallaContenido"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/nave">



    <ImageButton
        android:id="@+id/inicio"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:background="#00000000"
        android:scaleType="fitCenter"
        android:src="@drawable/home"
        />

    <!--EL TEXTO SE CARGA EN TIEMPO DE EJECUCIÃ“N-->
    <TextView
        android:id="@+id/informacion"
        android:layout_width="1390dp"
        android:layout_height="700dp"
        android:layout_marginRight="500dp"
        android:textAlignment="textStart"
        android:textColor="@color/Blanco"
        android:textSize="30sp"
        android:translationX="450dp"
        android:translationY="230dp"
        />

    <Button
        android:id="@+id/btncontinuar"
        android:layout_width="match_parent"
        android:layout_height="1100dp"
        android:scaleType="centerCrop"
        android:background="@android:color/transparent"
        android:layout_alignParentBottom="true"
        />

    <ImageView
        android:id="@+id/imagenNarrador"
        android:layout_width="490dp"
        android:layout_height="490dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/continuar"
        android:textColor="#000000"
        android:textSize="35sp"
        android:translationX="1000dp"
        android:translationY="1100dp"/>

    <TextView
        android:id="@+id/tiempo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>


</RelativeLayout>
