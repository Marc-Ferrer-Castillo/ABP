<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#000000">


    <ImageView
        android:id="@+id/btniniciar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg5" />


    <ImageView
        android:id="@+id/personaje"
        android:layout_width="359dp"
        android:layout_height="333dp"
        android:scaleType="fitCenter"
        android:translationX="380dp"
        android:translationY="420dp" />

    <TextView
        android:id="@+id/nombre"
        android:layout_width="407dp"
        android:layout_height="44dp"
        android:layout_weight="1"
        android:text="TextView"
        android:translationX="960dp"
        android:translationY="430dp" />

    <TextView
        android:id="@+id/frase"
        android:layout_width="407dp"
        android:layout_height="44dp"
        android:layout_weight="1"
        android:text="TextView"
        android:translationX="960dp"
        android:translationY="580dp" />

    <TextView
        android:id="@+id/aciertos"
        android:layout_width="690dp"
        android:layout_height="127dp"
        android:translationX="830dp"
        android:translationY="660dp"
        android:textSize="40dp"
        android:outlineAmbientShadowColor="@color/Blanco"/>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="83dp"
        android:translationX="-640dp" />

    <ImageButton
        android:id="@id/inicio"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_margin="7dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="#00000000"
        android:scaleType="fitCenter"
        android:src="@drawable/home" />

    <TextView
        android:id="@+id/tiempo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
</RelativeLayout>
